{
  "name": "@todo-esta-bien/numerodon",
  "version": "0.10.0",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "description": "Library to calculate numeric values from names or dates",
  "scripts": {
    "build": "tsc",
    "build:force": "rm -rf build && tsc",
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "test:verbose": "npm test -- --verbose",
    "prepare": "husky install",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/todo-esta-bien/numerodon.git"
  },
  "keywords": [
    "numerology",
    "tantric"
  ],
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).[t]s?(x)"
    ],
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "directories": {
    "test": "tests"
  },
  "author": "roeeyn",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/todo-esta-bien/numerodon/issues"
  },
  "files": [
    "/build",
    "!/build/tests"
  ],
  "homepage": "https://github.com/todo-esta-bien/numerodon#readme",
  "devDependencies": {
    "@types/jest": "^28.1.8",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "ts-jest": "^28.0.8",
    "typescript": "^4.7.4"
  }
}
